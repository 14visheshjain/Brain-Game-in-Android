<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/board">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="111dp"
            android:layout_height="109dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/todo40"
            android:onClick="dropin"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="111dp"
            android:layout_height="109dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="22dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/todo36"
            android:onClick="dropin"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="111dp"
            android:layout_height="109dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/todo38"
            android:onClick="dropin"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="109dp"
            android:layout_height="110dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/todo35"
            android:onClick="dropin"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="109dp"
            android:layout_height="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/todo32"
            android:onClick="dropin"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="109dp"
            android:layout_height="110dp"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/todo33"
            android:onClick="dropin"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="109dp"
            android:layout_height="110dp"
            android:contentDescription="@string/todo37"
            android:onClick="dropin"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="4" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="109dp"
            android:layout_height="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="25dp"
            android:contentDescription="@string/todo"
            android:onClick="dropin"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="4" />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="109dp"
            android:layout_height="110dp"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="23dp"
            android:contentDescription="@string/todo31"
            android:onClick="dropin"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="4" />
    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:id="@+id/playagain"
        android:layout_width="270dp"
        android:layout_height="247dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="129dp"
        android:alpha="1"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/winmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="28dp"
            android:alpha="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="112dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/playagain"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="playagain"
            android:text="@string/play_again1" />
    </LinearLayout>

</RelativeLayout>